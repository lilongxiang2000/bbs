extend layout.pug


block body
  div.register
    h3.text-center.my-2 注册
    form(action="/register", method="post")
      div(class='form-list')
        label(for="postUsername") 用户名（3-12位，字母或数字）
        input.form-control(
          type      = "text"
          id        = "postUsername"
          name      = 'username'
          minlength = '3'
          maxlength = '12'
        )
      div(class='form-list')
        label(for="postEmail") 邮箱
        input.form-control(
          type = "email"
          id   = "postEmail"
          name = 'email'
          minlength = '5'
          maxlength = '40'
        )
      div(class='form-list')
        label(for="password") 密码（8-24位，字母或数字）
        input.form-control(
          type      = "password"
          id        = 'password'
          name      = "password"
          minlength = '8'
          maxlength = '24'
          onkeyup   = "value=value.replace(/[\W]/g,'')"
        )
      div(class='form-list')
        label(for="password2") 确认密码
        input.form-control(
          type = "password"
          id   = 'password2'
          minlength = '8'
          maxlength = '24'
        )
      div(class='d-flex justify-content-end my-2')
        div(class='btn-group')
          button(
            type  = "reset"
            class = "btn btn-outline-primary"
          ) 清空
          button(
            type  = "submit"
            class = "btn btn-outline-primary"
          ) 注册
    script.
      $('button[type="submit"]').on('click', async e => {
        e.preventDefault()

        let username = $('#postUsername').val()
        let pwd1     = $('#password').val()
        let pwd2     = $('#password2').val()

        const userReg = /^[a-zA-Z0-9]{3,12}$/
        const pwdReg  = /^[a-zA-Z0-9_]{8,24}$/

        if (
          userReg.test(username) &&
          pwdReg.test(pwd1) && pwd1 == pwd2
        ) {
          await fetch('/register', {
            method: 'POST',
            headers: {
              'Content-Type': 'application/x-www-form-urlencoded'
            },
            body: $('form').serialize()
          })

          location.href = '/login'
        }
        else alret('格式错误！请检查')
      })
