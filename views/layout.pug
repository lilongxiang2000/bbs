doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    title bbs
    link(rel="icon" href="/favicon.ico")
    link(rel="stylesheet" href="/assets/bootstrap@5.1.3/bootstrap.css")
    script(src="/assets/jquery-3.6.0.min.js")
    style.
      body {
        min-width: 300px;
        overflow-x: hidden;
      }

      a { text-decoration: none; }
      a:hover { color: #0d6efd; }
      textarea { resize: none; height: 120px }

      a.list-group-item-action:focus {
        box-shadows: none;
      }
      a.list-group-item-action:hover {
        z-index: 1;
        color: #0d6efd;
        text-decoration: none;
        background-color: #f8f9fa;
      }

      .dropdown-menu { right: 0 }

      .hidden { display: none }
      .avatar-big {
        min-width: 180px;
        max-width: 180px;
        min-height: 180px;
        max-height: 180px;

        border: 5px solid #fff;
        box-shadow: 0 1px 4px rgb(0 0 0 / 30%);
      }
      .avatar {
        min-width: 120px;
        max-width: 120px;
        min-height: 120px;
        max-height: 120px;

        border: 5px solid #fff;
        box-shadow: 0 1px 4px rgb(0 0 0 / 30%);
      }
      .avatar-mini, .avatar-nav {
        min-width: 40px;
        max-width: 40px;
        min-height: 40px;
        max-height: 40px;
      }
      .avatar-nav {
        position: absolute;
        left: -40px;
      }

  body
    nav.navbar.navbar-expand-sm.navbar-light.bg-light
      .container
        a.navbar-brand(
          href='/'
          tabindex='-1'
        ) 首页
        #navbarSupportedContent
          ul.navbar-nav.ms-auto.mb-lg-0.text-end
            if loginUser
              li.nav-item.dropdown
                img.avatar-nav.rounded(
                  src=`/${
                    loginUser.avatarLink || '/assets/img/avatar-null.jpg'
                  }`
                )
                a#navbarDropdown.nav-link.dropdown-toggle.pe-0(
                  tabindex='-1'
                  href='#' role='button'
                  data-bs-toggle='dropdown'
                  aria-expanded='false'
                )=loginUser.username
                ul.dropdown-menu(
                  aria-labelledby='navbarDropdown'
                  tabindex='-1'
                )
                  li
                    a.dropdown-item(
                      href=`/user/${loginUser.username}`
                    ) 个人主页
                  li
                    a.dropdown-item(
                      href=`/setting/${loginUser.username}`
                    ) 设置
                  li
                    hr.dropdown-divider
                  li
                    a.dropdown-item(href='/logout') 退出

              script.
                $('#navbarDropdown').on('click', e => {
                  e.preventDefault()
                  if (e.target.ariaExpanded === 'true') {
                    $(e.target)
                      .removeClass('show')
                      .next().removeClass('show')

                    e.target.ariaExpanded = false
                  } else {
                    $(e.target)
                      .addClass('show')
                      .next().addClass('show')

                    e.target.ariaExpanded = true
                  }
                })

                $(document).on('click', e => {
                  if (e.target !== $('#navbarDropdown')[0]) {
                    $('#navbarDropdown')
                      .removeClass('show')
                      .next().removeClass('show')

                    $('#navbarDropdown')[0].ariaExpanded = false
                  }
                })
            else
              li.nav-item
                a.nav-link(href='/login') 登录
              li.nav-item
                a.nav-link(href='/register') 注册
          //- form.d-flex
          //-   input.form-control.me-2(type='search' placeholder='Search' aria-label='Search')
          //-   button.btn.btn-outline-primary(type='submit') Search
        script.
          $('button.navbar-toggler').on('click', e => {
            if (e.target.ariaExpanded == 'true') {
              $(e.target.dataset.bsTarget).removeClass('collapse')
              $(e.target.dataset.bsTarget).addClass('show')
              e.target.ariaExpanded = false
            } else {
              $(e.target.dataset.bsTarget).removeClass('show')
              $(e.target.dataset.bsTarget).addClass('collapse')
              e.target.ariaExpanded = true
            }
          })

    .container
      block body
