doctype html
html(lang="en")
  head
    title bbs
    link(
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
    )
    script(src="https://code.jquery.com/jquery-3.6.0.min.js")
    style.
      a { text-decoration: none; }
      a:hover { color: #0d6efd; }
      textarea { resize: none; height: 120px }

      a.list-group-item-action:focus {
        box-shadows: none;
      }
      a.list-group-item-action:hover {
        z-index: 1;
        color: #0d6efd;
        text-decoration: none;
        background-color: #f8f9fa;
      }

  body(class='100vh')
    nav.navbar.navbar-expand-lg.navbar-light.bg-light
      .container
        a.navbar-brand(
          href='/'
          tabindex='-1'
        ) 首页
        button.navbar-toggler(
          type='button' data-bs-toggle='collapse'
          data-bs-target='#navbarSupportedContent'
          aria-controls='navbarSupportedContent'
          aria-expanded='false' aria-label='Toggle navigation'
        )
          span.navbar-toggler-icon.pe-none
        #navbarSupportedContent.collapse.navbar-collapse
          ul.navbar-nav.ms-auto.mb-lg-0
            if loginUser
              li.nav-item.dropdown
                a#navbarDropdown.nav-link.dropdown-toggle(
                  tabindex='-1'
                  href='#' role='button'
                  data-bs-toggle='dr opdown'
                  aria-expanded='false'
                ) hi #{loginUser.username}
                ul.dropdown-menu(
                  aria-labelledby='navbarDropdown'
                  tabindex='-1'
                )
                  li
                    a.dropdown-item(
                      href=`/user/${loginUser.username}`
                    ) 个人主页
                  li
                    a.dropdown-item(
                      href=`/setting/${loginUser.username}`
                    ) 设置
                  li
                    hr.dropdown-divider
                  li
                    a.dropdown-item(href='/logout') 退出

              script.
                $('#navbarDropdown').on('click', e => {
                  e.preventDefault()
                  if (e.target.ariaExpanded == 'true') {
                    $(e.target).removeClass('show')
                    $(e.target).next().removeClass('show')
                    e.target.ariaExpanded = false
                  } else {
                    $(e.target).addClass('show')
                    $(e.target).next().addClass('show')
                    e.target.ariaExpanded = true
                  }
                })
            else
              li.nav-item
                a.nav-link(href='/login') 登录
              li.nav-item
                a.nav-link(href='/register') 注册
          form.d-flex
            input.form-control.me-2(type='search' placeholder='Search' aria-label='Search')
            button.btn.btn-outline-primary(type='submit') Search
        script.
          $('button.navbar-toggler').on('click', e => {
            if (e.target.ariaExpanded == 'true') {
              $(e.target.dataset.bsTarget).removeClass('collapse')
              $(e.target.dataset.bsTarget).addClass('show')
              e.target.ariaExpanded = false
            } else {
              $(e.target.dataset.bsTarget).removeClass('show')
              $(e.target.dataset.bsTarget).addClass('collapse')
              e.target.ariaExpanded = true
            }
          })

    .container
      block body
    .container
      block fotter
